<?xml version="1.0" ?>
<configuration>	
	<design
		title = "JavaScript Viewer for ArcGIS"
		theme = "orange">
		
		<heading
			type = "image"
			height = "63x"
			image = "images/header.png"
			fillimage = "images/background.png"
		/>
	</design>
	
	<proxy
		useProxy = "true"
		proxyUrl = "proxy.ashx"
	/>
	
	<tasks>
		<geometry 
			url = "http://tasks.arcgisonline.com/arcgis/rest/services/Geometry/GeometryServerr"
		/> 
		
		<geocoder
		    url = "http://geocode.arcgis.com/arcgis/rest/services/World/GeocodeServer"	
			singleLineFieldName = "SingleLine"
		/>
		
		<route
			url = "http://route.arcgis.com/arcgis/rest/services/World/Route/NAServer/Route_World"
		/>
		
		<print
			url = "http://sampleserver6.arcgisonline.com/arcgis/rest/services/Utilities/PrintingTools/GPServer/Export%20Web%20Map%20Task"
		/>
	</tasks>
		
    <dijits>
		<dijit type   = "toc"/>
		
		<dijit type="editor"
			   toolbar = "true">
			   
			   <tools
					undo-redoTool = "true"
					undo-redoMaxOperations = "15"
					mergeTool = "true"
					cutTool = "true"
					reshapeTool = "true"
					polygonDrawTools  = "POLYGON,FREEHAND_POLYGON,AUTOCOMPLETE,RECTANGLE,CIRCLE,TRIANGLE,ELLIPSE"
					polylineDrawTools = "POLYLINE,FREEHAND_POLYLINE,AUTOCOMPLETE,RECTANGLE,CIRCLE,TRIANGLE,ELLIPSE"	
				/>			   
		</dijit>
		
		<dijit type = "bookmarks"
			   editable = "true">
			   
			   <bookmarks>
					<bookmark
						title  = "Начальный">
						
						<extent
							xmin = "2111292"
							ymin = "4701998"
							xmax = "11564616"
							ymax = "9813291"
							wkid = "102100"
						/>						
					</bookmark>					
			   </bookmarks>
		</dijit>
		
		<dijit type="info"
         	    html = "Разработка компании &lt;a href = &quot;http://www.esri-cis.ru&quot; target = &quot;_blank&quot; &gt;Esri CIS&lt;/a&gt;.&lt;/br&gt;&lt;/br&gt; Версия 1.0 (сборка 05.07.2013).&lt;/br&gt;&lt;/br&gt;&lt;a href = &quot;help.docx&quot; target = &quot;_blank&quot; &gt;&lt;B&gt;Загрузить справку.&lt;/&gt;&lt;/a&gt;"/>
		
		<dijit type="geocoder" />
			   
		<dijit type="measure"
			   snappingLayerIDs = ""/>
			   
		<dijit type     = "layers"
			   grouping = "false"		
		/>
		
		<dijit type="scalebar"/>
		
		<dijit type="basemaps" 
		       arcgismaps = "true"
			   googlemaps="true"/>

		<dijit type="overview"/>	
		
		<dijit type = "print"
			   title = "JavaScript Viewer for ArcGIS"
			   owner = "Esri CIS"/>
		
		<dijit type="route"/>
					
		<dijit type="identify"
			   tolerance="10"/>
			   
		<dijit type        = "dateFilter"	
			   limits      = "double"
			   field       = "create_date"/>
			   		
    </dijits>
   
   <!-- Конфигурация карты -->
    <map>
		
		<options
			wkid               = "102100"
			slider             = "large"
			logoVisible        = "false"
			attributionVisible = "false" 
			basemap            = "osm">
			
			<extent
				xmin = "3494598"
				ymin = "7151549"
				xmax = "4945067"
				ymax = "7930596"
			/>			
		</options>
		
		<basemaps>		
			<basemap
				title = "Карта Росреестра"
				image = "images/basemaps/basemap_rosreestr.png"
				id = "rosreestr">
				
				<layers>
					<layer
						type      = "tiled"
						url       = "http://maps.rosreestr.ru/ArcGIS/rest/services/BaseMaps/BaseMap/MapServer"		
						id        = "rosreestr_base"
						title     = "Карта Росреестра (подложка)"
						opacity   = "1" 
						token     = ""
					/>					
					<layer
						type = "tiled"
						url = "http://maps.rosreestr.ru/ArcGIS/rest/services/BaseMaps/Anno/MapServer"		
						id  = "rosreestr_anno"
						title = "Карта Рореестра (подписи)"
						opacity = "1" 						
						token     = ""
					/>
				</layers>
			</basemap>
		</basemaps>	
				
		<mapLayers>				
			<layer
				type     = "dynamic"
				id       = "0"
				title    = "Регионы РФ"
				url      = "http://46.137.184.237/arcgis/rest/services/jsviewer/regions/MapServer"
				visible  = "true"
				toc      = "true"
				tocSlider = "true"
				token = "">
			
				<sublayers>
					<sublayer
						id = "0"
						title = "Регионы РФ"
						visible = "true">
						
						<popup 
							title = "{RegionNa_1}">
							
							<fields>
								<field
									label = "Код региона"
									name = "RegionCode"
								/>
								
								<field
									label = "Инвестиции в 2008 г., млн. руб."
									name = "Year2008"
									numericFormat = "3,true"
								/>
									
							</fields>
							
							<charts
								title  = "Статистика">
							
								<chart
									title    = "Динамика инвестиций за 2000 - 2008 гг."
									type  = "Markers"
									fields   = "Year2000,Year2001,Year2002,Year2003,Year2004,Year2005,Year2006,Year2007,Year2008"		
									labels   = "2000,2001,2002,2003,2004,2005,2006,2007,2008"
								/>	
								
								<chart
									title    = "Распределение инвестиций по отрасляи в 2008 г."
									type     = "Pie"
									fields   = "Zhilischa,Zdanija,Oborudovan,Prochee"	
									labels   = "Жилые здания,Нежилие помещения,Оборудование,Прочее"
								/>	
							</charts>
						</popup>
					
						
					</sublayer>
				</sublayers>
			</layer>
			
			<layer
				type = "dynamic"
				id = "1"
				title = "Точки и полигоны"
				url = "http://46.137.184.237:6080/arcgis/rest/services/jsviewer/points_polygons_ms/MapServer"
				visible="true" 
				toc  = "true"
				tocSlider = "false"
				token = ""
				dateFilter = "true">
				
				<sublayers>
					<sublayer
						id = "0"
						title = "Точки"
						definitionExpression = "creator = $login"
						visible = "true">
						
						<popup
							title = "Точки">

							<fields>
								<field
									label = "Название"
									name = "Name"
								/>
								
								<field
									label = "Цвет"
									name = "Color"
								/>
								
								<field
									label = "Дата последнего изменения"
									name = "edit_date"
									visible = "true"
									dateFormat = "dayShortMonthYear"
								/>
							</fields>
						</popup>	
						
						<edit
							featureServiceUrl = "http://46.137.184.237:6080/arcgis/rest/services/jsviewer/points_polygons_fs/FeatureServer/0">
							
							<fields>
								<field name = "name" label = "Название"/>
								<field name = "color"  label = "Цвет"/>
							</fields>					
						</edit>												
					</sublayer>
					<sublayer
						id = "1"
						title = "Полигоны"
						definitionExpression = "creator = $login"
						visible = "true">
						
						<popup
							title = "Полигоны">

							<fields>
								<field
									label = "Название"
									name = "name"
								/>
								
								<field
									label = "Цвет"
									name = "color"
								/>
								
								<field
									label = "Дата последнего изменения"
									name = "edit_date"
									dateFormat = "dayShortMonthYear"
								/>
							</fields>
						</popup>	
						
						<edit
							featureServiceUrl = "http://46.137.184.237:6080/arcgis/rest/services/jsviewer/points_polygons_fs/FeatureServer/1">
							
							<fields>
								<field name = "name" label = "Название"/>
								<field name = "color"  label = "Цвет"/>
							</fields>					
						</edit>											
					</sublayer>
				</sublayers>
			</layer>
			
			<layer
				type = "feature"
				id = "2"
				title = "Линии"
				url="http://46.137.184.237:6080/arcgis/rest/services/jsviewer/lines/FeatureServer/0" 
				toc = "true"
				token = ""
				mode = "ONDEMAND"
				definitionExpression = "creator = $login"
				outFields = "*"
				dateFilter = "false"
				snapping = "true">
				
				<tooltip
					title   = "${name}"
					content = "Цвет: ${color}"
					opacity = "0.85"
				/>
				
				<popup
					title = "{name}"
					conent = "{color}">
							
					<fields>
						<field
							label = "Название"
							name = "name"
							visible = "true"
						/>								
						<field
							label = "Цвет"
							name = "color"
						/>								
						<field
							label = "Дата последнего изменения"
							name = "edit_date"
							dateFormat = "dayShortMonthYear"
						/>					
					</fields>	
					
					<images>
						<image
							title = "Фотография"
							field = "image"
						/>
					</images>
				</popup>
				
				<edit>
					<fields>
						<field name = "name" label = "Название"/>
						<field name = "color"  label = "Цвет"/>
					</fields>					
				</edit>		
			</layer>
				
		</mapLayers>
    </map>
</configuration>